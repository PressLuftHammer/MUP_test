<div>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Список заявок", "Index", "Home")</li>
        <li class="breadcrumb-item">Новая заявка</li>
    </ol>
</div>

@using (Html.BeginForm("Create", "Request", FormMethod.Post))
{

    <div class="row">
        <div class="col-md">
            <div>Текст заявки</div>
            @Html.TextArea("Comment", string.Empty, 5, 50, null)
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <input type="submit" value="Открыть" class="btn btn-primary" />
        </div>
    </div>

}



